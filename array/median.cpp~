#include <iostream>
using namespace std;

int median(int arr[], int size){

  int i = 0;
  sort(arr, arr + size);

  int mid = arr[size/2];
  
  if (size % 2 == 0){
    int sum = mid + arr[size/2 + 1];
    return sum/2.0;
  }
  else{
    return mid;
  }



}

int main(){

  int arr[] = {1, 2, 3, 4};
  int size = 4;
  cout << median(arr, 4);

}
