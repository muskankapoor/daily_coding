#include <iostream>
#include <algorithm>
using namespace std;

void ArrSum(vector<int> v, int k){

  sort(v);

  int *left_pointer = v[0];
  int *right_pointer = v[v.size() -1];
  int i = 0, j = v.size() - 1;


  while ((i != v.end()) && ((j != 0))){

    if (v[i] + v[j] == k){
      cout << v[i] << " " << v[j];
      left_pointer++;
      i++;
      j--;
      right_pointer--;
      
				    
    }

    if (v[i] + v[j] < k){
      left_pointer++;
      i++;
     
      
      
    }

    if (v[i] + v[j] > k){
      j--;
      right_pointer--;
      
    }
    
  }
  
  
}


int main(){

  vector<int> v = {1, 2, 3};

  ArrSum(v, 4)
  
  
}
