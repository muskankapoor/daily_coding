#include <iostream>
#include <string>
using namespace std;

int superDigit(string n, int k) {

    string copy = n; 
    int sum = 0;
    if (n.length() == 0){
        return 0;
    }
    if (n.length() == 1){
        int sum = 0;
        for (char ch: n) { 
            // if current character is a digit 
            if (isdigit(ch)){
                sum += ch;
            } 
        } 
        return sum; 
    }
    for (int i = 0; i < n.length(); i++){
        n += copy;
    }

    for (char ch: n) { 
        // if current character is a digit 
        if (isdigit(ch)){
            sum += ch;
        } 
             
    }
    string s = to_string(sum);
    return superDigit(s, 0);
    

}


int main(){

  string s = "148";
  int k = 3;
  cout << superDigit(s, k);

}
